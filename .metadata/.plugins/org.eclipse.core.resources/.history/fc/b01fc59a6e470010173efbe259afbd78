package Collection_Exercise;

public class Book {
		private int ISBN;
		private String title;
		private String author;
		private boolean isIssued;
		
		public Book(){}
		public Book(int ISBN, String title, String author) {
			this.ISBN = ISBN;
			this.title = title;
			this.author = author;
			this.isIssued = false;
		}
		public int getISBN() {
			return ISBN;
		}
		public void setISBN(int iSBN) {
			ISBN = iSBN;
		}
		public String getTitle() {
			return title;
		}
		public void setTitle(String title) {
			this.title = title;
		}
		public String getAuthor() {
			return author;
		}
		public void setAuthor(String author) {
			this.author = author;
		}
		
		public void toString(boolean isIssued) {
			if(!isIssued)
			System.out.println(getISBN() + getTitle() + getAuthor());
		}

}
