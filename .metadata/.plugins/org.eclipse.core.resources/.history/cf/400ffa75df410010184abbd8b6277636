package duedateassignment2;
import java.lang.Math;

public class d_assignment02 {
	
	static int recursive_power(int x, int n){
		if(n == 0) {
			return 1;
		}else {
			int result = n * recursive_power(x,n-1);
			return result;
		}

	}

	public static void main(String[] args) {
		System.out.println(recursive_power(2,2));
	}

}
